# Default server configuration
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# default_server, so this can serve http for darwin.network, irc.skub.club, etc.
	server_name irc.darwin.network darwin.network irc.skub.club;

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html
	autoindex off;

	location /.well-known/ {
		root /var/www/certbot;
	}

	location / {
		return 302 https://$host$request_uri;
	}
}
